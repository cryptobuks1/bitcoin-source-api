{
  "name": "bitcoin-source-api",
  "version": "0.2.1",
  "description": "Bitcoin Source API",
  "license": "MIT",
  "repository": "the-bitcoin-token/bitcoin-source-api",
  "main": "dist/bitcoin-source-api.common.js",
  "module": "dist/bitcoin-source-api.esm.js",
  "author": {
    "name": "Brenton Gunning",
    "email": "brentongunning@gmail.com",
    "url": "https://github.com/brentongunning"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:integration": "jest './test/integration/'",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "flow": "flow check",
    "docs": "documentation readme src --section=API",
    "clean": "rm -rf dist",
    "preversion": "npm run clean && npm test",
    "version": "npm run build && npm run docs && git add -A dist README.md",
    "postversion": "git push && git push --tags && npm publish",
    "bump": "npm version patch -m 'Bump version to %s.'"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [
    "bitcoin",
    "source",
    "rest",
    "api"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "bitcoinsource": "^0.1.16"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "babel-preset-minify": "^0.5.0",
    "documentation": "^9.3.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-flowtype-errors": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.95.1",
    "flow-copy-source": "^2.0.3",
    "flow-typed": "^2.5.1",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "prettier": "^1.16.4",
    "rollup": "^1.7.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4"
  }
}
