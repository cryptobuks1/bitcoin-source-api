{
  "name": "bitcoin-source-api",
  "version": "0.2.0",
  "description": "Bitcoin Source API",
  "license": "UNLICENSED",
  "repository": "the-bitcoin-token/bitcoin-source-api",
  "main": "dist/bitcoin-source-api-umd.js",
  "module": "src/index.js",
  "author": {
    "name": "Brenton Gunning",
    "email": "brentongunning@gmail.com",
    "url": "https://github.com/brentongunning"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "test": "jest",
    "testIntegration": "jest './test/integration/'",
    "testLintFlow": "eslint src test && flow check && jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "eslint src test",
    "fixLint": "eslint src test --fix",
    "flow": "flow check",
    "docs": "documentation readme src --section=API",
    "clean": "rimraf dist",
    "babel": "node_modules/.bin/babel src --out-dir dist/babel",
    "webpack": "node_modules/.bin/webpack-cli",
    "rollup": "rollup -c",
    "flowbuild": "flow-copy-source src dist",
    "prebuild": "npm run docs && npm run clean && npm run flowbuild",
    "build": "babel src -d dist && rollup -c",
    "watch": "npm-watch",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "postpublish": "git push origin master --follow-tags",
    "reinstall": "rm -rf node_modules && npm install"
  },
  "watch": {
    "test": "{src,test}/*.js",
    "lint": "{src,test}/*.js",
    "build": "src"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [
    "bitcoin",
    "source",
    "rest",
    "api"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "bitcoinsource": "0.1.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-minify-mangle-names": "^0.5.0",
    "documentation": "^9.3.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-flowtype-errors": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.95.1",
    "flow-copy-source": "^2.0.3",
    "flow-typed": "^2.5.1",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "npm-watch": "^0.6.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4"
  }
}
